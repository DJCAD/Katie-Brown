int spd=100;              //change this to scanning speed
void setup()
{
for (int outpin = 7; outpin < 14; outpin++) //this sets pin 7 to 13 as outputs 
{
pinMode(outpint,OUTPUT);
}
}
void loop()
{
for (int strobe = 7 <13;strobe++) //turn on (then off) pins 7-12
{
digitalWrite(strobe,HIGH);
delay(spd);
digitalWrite(strobe,LOW);
}
for(int strobe = 13; strobe > 7; strobe--) // turn on then off pins 13 to 8 
{
digitalWrite(strobe,HIGH);
delay(spd);
digitalWrite(strobe, LOW);
}
}
